<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="movieVM"
            type="com.rupesh.kotlinrxjavaex.presentation.ui.viewmodel.MovieViewModel" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/layout_background"
        tools:context=".presentation.ui.features.movie.fragment.MovieFragment">

        <ProgressBar
            android:id="@+id/progress_bar_movie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            style="?android:attr/progressBarStyleSmall"
            android:visibility="invisible" />

        <include
            android:id="@+id/layout_content_movie_fragment"
            layout="@layout/content_movie_fragment"/>
    </LinearLayout>
</layout>
