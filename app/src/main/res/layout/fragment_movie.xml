<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="movieVM"
            type="com.rupesh.kotlinrxjavaex.presentation.viewmodel.MovieViewModel" />

        <variable
            name="dbMovieVM"
            type="com.rupesh.kotlinrxjavaex.presentation.viewmodel.DbMovieViewModel" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragment.MovieFragment">


        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/search" />

        <include
            android:id="@+id/layout_content_movie_fragment"
            layout="@layout/content_movie_fragment"/>

    </LinearLayout>
</layout>
